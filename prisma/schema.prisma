generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Products {
  id Int @default(autoincrement()) @id
  name String
  price Float
  create_at DateTime @default(now())
  update_at DateTime @updatedAt
  availability Availability 
}

enum Availability {
  IN_STORE
  ONLINE
}